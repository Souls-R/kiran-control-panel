/***********************QCheckBox********************/
QCheckBox::indicator{
    width: 50px;
    height: 22px;
    border:none;
    background-color:transparent;
    image: url(:/images/on.png);
}
QCheckBox::indicator:unchecked{
    image: url(:/images/off.png);
}
QCheckBox:disabled
{

}

/**********************QPushButton*********************/
#btn_save,#btn_cancel
{
    color:white;
    font-family: "Noto Sans CJK SC light";
    font-size:12px;
    border-radius:10px;
    border:none;
}
#btn_save
{
    background:#2eb3ff;
}
#btn_save:hover
{
    background:#77ceff;
}
#btn_save:pressed
{
    background-color:#2eb3ff;
    border:none;
}
#btn_cancel
{
    background:#2d2d2d;
}
#btn_cancel:hover
{
    background:rgba(255,255,255,0.1);
}


