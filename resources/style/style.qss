LayoutList
{
    border: 1px solid #393939;
    border-radius:6px;
}
LayoutList[editHasFocus="false"]{
    border:1px solid rgb(255,255,255,25);
    border-radius:6px;
}
LayoutList[editHasFocus="true"] {
    border:1px solid rgb(67,163,242);
    border-radius:6px;
}



